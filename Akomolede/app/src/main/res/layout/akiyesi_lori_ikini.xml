<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/akiyesi_lori_ikini"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/dark_blue_1_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:minHeight="300dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/textview_outline"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/akiyesi_ikini_textview_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:text="@string/oro_lori_akiyesi_ikini"
        android:textSize="30sp"
        android:background="?android:attr/selectableItemBackground"
        android:textStyle="bold"
        android:padding="4dp"

        android:textColor="@color/background_color"

        >

    </TextView>

    <TextView
        android:id="@+id/akiyesi_ikini_textview_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/akiyesi_ikini_textview_1"
        android:textSize="25sp"
        android:padding="4dp"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/akiyesi_lori_ikini_1">


    </TextView>

        <TextView
            android:id="@+id/akiyesi_ikini_textview_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/akiyesi_ikini_textview_2"
            android:textSize="25sp"
            android:padding="4dp"
            android:gravity="center_horizontal"
            android:textStyle="italic"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/akiyesi_lori_ikini_2">


        </TextView>
    </LinearLayout>

</RelativeLayout>